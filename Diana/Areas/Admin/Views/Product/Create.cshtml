@using Diana.Areas.Admin.ViewModels;
@model ProductVm

<div class"container" style="width: 80%">
    <div class"row">
        <form method="post" enctype="multipart/form-data">
            <div style="margin-left:100px" class="form-group">
                <label asp-for="Name">Title</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Title">
                <span asp-validation-for="Name" style="color:red"></span>
            </div>
            <div style="margin-left:100px" class="form-group">
                <label asp-for="Description">Description</label>
                <input type="text" class="form-control" asp-for="Description" placeholder="Description">
                <span asp-validation-for="Description" style="color:red"></span>
            </div>

            <div style="margin-left:100px" class="row align-items-center">
                <div class="mb-3 col-md-4">
                    <label asp-for="ProductImages" class="form-label">Photo</label>
                    <input class="form-control" asp-for="ProductImages">
                    <span asp-validation-for="ProductImages" style="color:red"></span>
                </div>
            </div>
            <button style="margin-left:500px" type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
